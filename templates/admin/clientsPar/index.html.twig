{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des Clients Particulièrs{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-3 mb-3 text-center">Clients particulièrs </h1>
  
    <div class="" style="position: absolute;">
         <a class="btn btn-success mb-2" href="{{ path('clientsPar_new') }}">créer un  client</a>
    </div>
    <div class="d-flex justify-content-end">
        <a class="btn  btn-primary  " href=" {{ path('clientsPage')}} " ><i class="fas fa-undo "></i> Retour</a>
    </div>
    <table class="table table-hover small mt-2">
        <thead>
            <tr class="text-center">
                <th>NomComplet</th>
                <th class="text-center">Email</th>
                <th>Adresse</th>
                <th>Telephone</th>
                <th>Date</th>
                <th>jk</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for clientsPar in clientsPars %}
            <tr class="text-center">
                <td >{{ clientsPar.NomComplet }}</td>
                <td>{{ clientsPar.Email }}</td>
                <td>{{ clientsPar.Adresse }}</td>
                <td>{{ clientsPar.telephone }}</td>
                <td>{{ clientsPar.date ? clientsPar.date|date('d-m-Y') : '' }}</td>
                <td>
                    <a href="{{ path('clientsPar_show', {'id': clientsPar.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('clientsPar_edit', {'id': clientsPar.id}) }}"><i class="fas fa-edit text-success"></i></a>
                     <a href="{{ path('situation_clt', {'id': clientsPar.id}) }}"><i class="fas fa-eye text-success"></i></a>
                </td>
                <td>{{ clientsPar.getSoldeClient }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
</div>
{% endblock %}
