{% extends "admin/base.html.twig" %}				

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-2"> <!--debut container-->
    <div class="alert alert-success text-center">
      <h2> Menuiserie  {{ categorie.designation }}  </h2>
    </div>
    <div  class="row m-1 mb-4 border p-2 bg-secondary">
        <div class="col-8">
          <input type="text" placeholder="recherche un produit  ......." class="form-control ml-5" >
        </div>
        <div class="col-2">
        </div>
        <div class="col-2">
           <button class="btn btn-primary w-100"><i class="fas fa-plus text-light"></i> Ajouter </button>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Catégories</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Date</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id}}</td>
                <td>{{ type.type.typeCategorie}} Menuiserie {{ type.type.Categories.designation}}</td>
                <td>{{  type.slug }} </td>
                <td>{{  type.description | raw   }} </td>
                <td>{{  type.date }} </td>
                <td>
                <a href="{{  type.image }}">
                    <img src="{{  type.image }}" class="img-fuild w-100 rounded-pill" height="50px"  /></td>
                </a>
                <td>
                    <a href="" class=""><i class="fas fa-file-export text-success"></i></a>
                    <a href="" class=" "><i class="fas fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
</div><!--fin container-->
{% endblock body %}