{% extends "admin/base.html.twig" %}				

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-2"> <!--debut container-->
    <div class="alert alert-success text-center">
    
      <h2>Gestion de Menuiserie  {{ categorie.designation }}</h2>
    </div>
    <div  class="row m-1 mb-4 border p-2 bg-secondary">
        <div class="col-8">
          <input type="text" placeholder="recherche un produit  ......." class="form-control ml-5" >
        </div>
        <div class="col-2">
        </div>
        <div class="col-2">
           <a href=" {{ path('ArticlesPage',{'id': categorie.id}) }}" class="btn btn-primary w-100"><i class="fas fa-plus text-light"></i> Ajouter </a>
        </div>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>id</th>
                <th>Catégories</th>
                <th>Designation</th>
                <th>Observaton</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id}}</td>
                <td>Menuiserie {{ type.Categories.designation  }}</td>
                <td> {{  type.typeCategorie }} </td>
                <td>{{  type.observation }} </td>
                <td>
                    <a href="{{ path('ArticlesPageEdit',{'id' : type.id }) }}" class=""><i class="fas fa-file-export text-success"></i></a>
                    <a href="{{ path('deleteTypePage',{'id' : type.id }) }}" class=" "><i class="fas fa-trash text-danger"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
</div><!--fin container-->
{% endblock body %}