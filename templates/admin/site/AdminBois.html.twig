{% extends "admin/base.html.twig" %}				

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container mt-2"> <!--debut container-->
    <div class="alert alert-success text-center">
    
      <h2>Gestion de Menuiserie  {{ categorie.designation }}</h2>
    </div>
    <div  class="row m-1 mb-4 border p-2 bg-secondary">
        <div class="col-8">
          <input type="text" placeholder="recherche un produit  ......." class="form-control ml-5" >
        </div>
        <div class="col-2">
        </div>
        <div class="col-2">
           <a href=" {{ path('ArticlesPage',{'id': categorie.id}) }}" class="btn text-info bg-light w-100"><i class="fas fa-plus-circle text-info"></i> Ajouter </a>
        </div>
    </div>
    <table class="table table-striped table-hover small">
        <thead>
            <tr>
                
                <th class="text-center">id</th>
                <th>Catégories</th>
                <th>Designation</th>
                <th>Produit</th>
                <th>Observaton</th>
                <th>Action</th>
                
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
            <td class="text-center">
                <a href="{{ path('produitPageNew',{'id' : type.id }) }}" >
                                        <i class="fas fa-plus text-success"></i>
                                        &nbsp; produit &nbsp; &nbsp;
                                        </a>
                
                {{ type.id}}</td>
                <td>Menuiserie {{ type.Categories.designation  }}</td>
                <td> {{  type.typeCategorie }} </td>
                <td><span class="badge badge-primary p-1"> {{  type.produits | length }} </span></td>
                <td>{{  type.observation }} </td>
                <td>
                    <a href="{{ path('ArticlesPageEdit',{'id' : type.id }) }}"  class=" btn btn-link "><i class="fas fa-edit text-success "></i></a>
                    <a href="{{ path('deleteTypePage',{'id' : type.id }) }}" class=" {% if  type.produits | length > 0 %} disabled {% endif %}btn btn-link" ><i class="fas fa-trash-alt text-danger"></i></a>
                    <a href="{{ path('ProduitsPage2',{'id' : type.id , 'cat' :  categorie.id }) }}" class="btn btn-link {% if  type.produits | length <= 0 %} disabled {% endif %}"><i class="fas fa-dolly"></i> voir produit</a>
                </td>
                
            </tr>
        {% endfor %}
        </tbody>
        </table>
</div><!--fin container-->
{% endblock body %}